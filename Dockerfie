FROM ubuntu
RUN apt-get update -y
RUN apt-get install sudo -y
RUN sudo apt install default-jdk -y
RUN sudo apt install wget -y
RUN sudo apt install gnupg -y
RUN sudo  wget -q -O - https://pkg.jenkins.io/debian-stable/jenkins.io.key | sudo apt-key add -
RUN sudo sh -c 'echo deb https://pkg.jenkins.io/debian-stable binary/ > \
    /etc/apt/sources.list.d/jenkins.list'
RUN sudo apt-get update
RUN sudo apt install jenkins -y
CMD ["echo", "success"]
